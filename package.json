{
  "name": "katulong",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "chmod +x node_modules/node-pty/prebuilds/*/spawn-helper 2>/dev/null || true",
    "daemon": "node daemon.js",
    "start": "node server.js",
    "dev": "node daemon.js & node server.js",
    "start:all": "node --env-file=.env.local entrypoint.js",
    "test": "node --test test/*.test.js test/*.integration.js",
    "test:unit": "node --test test/*.test.js",
    "test:integration": "node --test test/*.integration.js",
    "test:e2e": "npx playwright test",
    "prepare": "husky"
  },
  "dependencies": {
    "@simplewebauthn/server": "^13.0.0",
    "dotenv": "^17.2.4",
    "node-datachannel": "^0.12.0",
    "node-pty": "^1.0.0",
    "simple-peer": "^9.11.1",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "husky": "^9.1.7"
  }
}
