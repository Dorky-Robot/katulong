{
  "name": "katulong",
  "version": "0.4.11",
  "private": true,
  "type": "module",
  "bin": {
    "katulong": "./bin/katulong"
  },
  "scripts": {
    "postinstall": "chmod +x node_modules/node-pty/prebuilds/*/spawn-helper 2>/dev/null || true",
    "daemon": "node daemon.js",
    "daemon:dev": "nodemon daemon.js",
    "start": "node server.js",
    "start:dev": "nodemon server.js",
    "dev": "nodemon entrypoint.js",
    "start:all": "node --env-file=.env.local entrypoint.js",
    "test": "node --test --test-concurrency=0 test/*.test.js test/*.integration.js",
    "test:all": "npm test && npm run test:e2e",
    "test:unit": "node --test --test-concurrency=0 test/*.test.js",
    "test:integration": "node --test --test-concurrency=0 test/*.integration.js",
    "test:e2e": "npx playwright test",
    "test:e2e:sharded": "bash scripts/run-e2e-sharded.sh",
    "test:e2e:clean": "bash test/e2e/cleanup-test-server.sh",
    "prepare": "husky || true"
  },
  "dependencies": {
    "@simplewebauthn/server": "^13.0.0",
    "dotenv": "^17.2.4",
    "multicast-dns": "^7.2.5",
    "node-datachannel": "^0.12.0",
    "node-forge": "^1.3.3",
    "node-pty": "^1.0.0",
    "simple-peer": "^9.11.1",
    "ssh2": "^1.17.0",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "husky": "^9.1.7",
    "nodemon": "^3.1.11"
  }
}
